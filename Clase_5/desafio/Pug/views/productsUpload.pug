doctype html
html(lang='es')
    head
    style
        include ../../public/css/bootstrap.min.css
        include ../../public/css/styles.css

    body(class="text-center")
        main(class="flex")
            h1(class="h3 mb-3 font-weight-bold") Ingrese sus producto:</h1>
                form(class="formUploadSingle mt-3 mb-3" action="/app/uploadProducts" enctype="multipart/form-data" method="post")
                    div(class="row")
                        div(class="col-md-6 mb-3")

                        div(class="row")

                div(class="col-md-6 mb-3")
                    label(for="title") Titulo
                    input(type="text" class="form-control" id="title" name="title" placeholder="Titulo" value="" required)

                div(class="col-md-6 mb-3")
                    label(for="price") Precio
                    input(type="text" class="form-control" id="price" name="price" placeholder="Precio" value="" required)


                    div(class="row")
                        div(class="text-center col-md-12")
                        label(for="image") Imagen
                        input(type="file" class="form-control " id="image " name="image" placeholder="url..." value="" required)

                    button(class="mt-4 btn btn-lg btn-primary btn-block " type="submit ") Upload

                    div(class="container")
                        div(class="row")
                        div(class="btn-toolbar pull-right")
                        div(class="btn-group")
                        div(type='button' class='m-5 btn btn-secondary' href="/app/productos") Vista


